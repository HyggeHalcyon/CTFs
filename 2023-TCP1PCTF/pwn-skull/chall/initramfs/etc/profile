alias ll='ls -al '
alias l='ls '
if [ "$(id -u)" -eq 0 ]; then
      COLOR=31
      PS1='\e[01;${COLOR}m$(whoami)@tcp1p\[\033[00m\]:\[\033[36m\]\w\[\033[00m\]\# '
      cd /$(whoami)
    else
      COLOR="32"
      PS1='\e[01;${COLOR}m$(whoami)@tcp1p\[\033[00m\]:\[\033[36m\]\w\[\033[00m\]\$ '
      cd /home/$(whoami)
fi
